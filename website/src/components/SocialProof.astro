---
const techStack = [
  { name: 'Tauri', url: 'https://tauri.app' },
  { name: 'React', url: 'https://react.dev' },
  { name: 'Python', url: 'https://python.org' },
  { name: 'scikit-learn', url: 'https://scikit-learn.org' },
  { name: 'Optuna', url: 'https://optuna.org' },
  { name: 'SHAP', url: 'https://shap.readthedocs.io' },
];

const badges = [
  { label: 'Open Source', icon: 'github' },
  { label: 'MIT License', icon: 'scale' },
  { label: 'Works Offline', icon: 'wifi-off' },
];
---

<section class="social-proof">
  <div class="content">
    <div class="tech-stack">
      <span class="label">Built with</span>
      <div class="tech-badges">
        {techStack.map((tech) => (
          <a href={tech.url} target="_blank" rel="noopener noreferrer" class="tech-badge">
            {tech.name}
          </a>
        ))}
      </div>
    </div>

    <div class="divider"></div>

    <div class="trust-badges">
      {badges.map((badge) => (
        <div class="trust-badge">
          {badge.icon === 'github' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
              <path d="M9 18c-4.51 2-5-2-7-2"/>
            </svg>
          )}
          {badge.icon === 'scale' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m16 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"/>
              <path d="m2 16 3-8 3 8c-.87.65-1.92 1-3 1s-2.13-.35-3-1Z"/>
              <path d="M7 21h10"/>
              <path d="M12 3v18"/>
              <path d="M3 7h2c2 0 5-1 7-2 2 1 5 2 7 2h2"/>
            </svg>
          )}
          {badge.icon === 'wifi-off' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="1" y1="1" x2="23" y2="23"/>
              <path d="M16.72 11.06A10.94 10.94 0 0 1 19 12.55"/>
              <path d="M5 12.55a10.94 10.94 0 0 1 5.17-2.39"/>
              <path d="M10.71 5.05A16 16 0 0 1 22.58 9"/>
              <path d="M1.42 9a15.91 15.91 0 0 1 4.7-2.88"/>
              <path d="M8.53 16.11a6 6 0 0 1 6.95 0"/>
              <line x1="12" y1="20" x2="12.01" y2="20"/>
            </svg>
          )}
          <span>{badge.label}</span>
        </div>
      ))}
    </div>

    <a href="https://github.com/babushkai/desktop" target="_blank" rel="noopener noreferrer" class="github-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
        <path d="M9 18c-4.51 2-5-2-7-2"/>
      </svg>
      Star on GitHub
    </a>
  </div>
</section>

<style>
  .social-proof {
    padding: 4rem 2rem;
    background: var(--surface-1, hsl(222, 47%, 7%));
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .content {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .tech-stack {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .label {
    font-size: 0.875rem;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tech-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .tech-badge {
    padding: 0.375rem 0.75rem;
    background: var(--surface-3, hsl(222, 47%, 14%));
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 9999px;
    font-size: 0.8125rem;
    color: #94a3b8;
    text-decoration: none;
    transition: all 150ms ease;
  }

  .tech-badge:hover {
    background: var(--surface-4, hsl(222, 47%, 18%));
    color: #f8fafc;
    border-color: rgba(34, 211, 238, 0.3);
  }

  .divider {
    width: 60px;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
  }

  .trust-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.875rem;
  }

  .trust-badge svg {
    color: #22d3ee;
  }

  .github-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 0.5rem;
    color: #f8fafc;
    font-size: 0.9375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 200ms ease;
  }

  .github-button:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.25);
  }
</style>
