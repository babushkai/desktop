---
import { Image } from 'astro:assets';
import heroScreenshot from '../assets/screenshots/hero-pipeline.png';

interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <h1>{title}</h1>
    <p class="subtitle">{subtitle}</p>
    <div class="cta-buttons">
      <a href="https://github.com/kissaten-ai/desktop/releases/latest" class="btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7 10 12 15 17 10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
        Download for macOS
      </a>
      <a href="#waitlist" class="btn-secondary">
        Join Waitlist
        <span class="badge">Windows/Linux</span>
      </a>
    </div>
    <p class="requirements">Requires macOS 12+, Python 3.9+</p>
  </div>
  <div class="hero-image">
    <div class="screenshot-frame">
      <Image
        src={heroScreenshot}
        alt="Kissaten AI pipeline showing DataLoader, Data Split, Trainer, and Evaluator nodes with classification metrics"
        width={1200}
        quality={90}
        class="screenshot"
      />
    </div>
  </div>
</section>

<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    padding: 6rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 4rem 1.5rem;
    }
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: #f8fafc;
    margin: 0 0 1.5rem 0;
  }

  @media (max-width: 600px) {
    .hero-content h1 {
      font-size: 2rem;
    }
  }

  .subtitle {
    font-size: 1.25rem;
    color: #94a3b8;
    line-height: 1.6;
    margin: 0 0 2rem 0;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  @media (max-width: 900px) {
    .cta-buttons {
      justify-content: center;
    }
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: #22d3ee;
    color: #0b0e14;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 200ms ease;
  }

  .btn-primary:hover {
    background: #67e8f9;
    box-shadow: 0 4px 24px rgba(34, 211, 238, 0.25);
    transform: translateY(-1px);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: var(--surface-3, hsl(222, 47%, 14%));
    color: #94a3b8;
    font-weight: 500;
    font-size: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 200ms ease;
  }

  .btn-secondary:hover {
    background: var(--surface-4, hsl(222, 47%, 18%));
    color: #f8fafc;
    border-color: rgba(255, 255, 255, 0.2);
  }

  .btn-secondary .badge {
    padding: 0.125rem 0.5rem;
    background: rgba(34, 211, 238, 0.15);
    color: #22d3ee;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 9999px;
  }

  .requirements {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: #64748b;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .screenshot-frame {
    width: 100%;
    max-width: 700px;
    background: var(--surface-1, hsl(222, 47%, 7%));
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.2),
      0 12px 24px -4px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  .screenshot {
    width: 100%;
    height: auto;
    display: block;
  }
</style>
