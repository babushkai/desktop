<style is:global>
  :root {
    --navy-h: 222;
    --navy-s: 47%;
    --surface-0: hsl(var(--navy-h), var(--navy-s), 4%);
    --surface-1: hsl(var(--navy-h), var(--navy-s), 7%);
    --surface-2: hsl(var(--navy-h), var(--navy-s), 10%);
    color-scheme: dark;
  }

  * { box-sizing: border-box; }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Inter', Roboto, sans-serif;
    background: var(--surface-0);
    color: #f8fafc;
    -webkit-font-smoothing: antialiased;
  }
</style>

<style>
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(11, 14, 20, 0.85);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-weight: 600;
    color: #f8fafc;
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: #94a3b8;
    text-decoration: none;
  }

  .nav-links a:hover {
    color: #f8fafc;
  }

  .legal-page {
    padding: 8rem 2rem 4rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .last-updated {
    color: #64748b;
    font-size: 0.875rem;
    margin-bottom: 3rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem 0;
    color: #f8fafc;
  }

  p {
    color: #94a3b8;
    line-height: 1.7;
    margin: 0 0 1rem 0;
  }

  ul {
    color: #94a3b8;
    line-height: 1.7;
    padding-left: 1.5rem;
    margin: 0 0 1rem 0;
  }

  li {
    margin-bottom: 0.5rem;
  }

  a {
    color: #22d3ee;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
